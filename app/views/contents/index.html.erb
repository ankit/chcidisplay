<h1>Listing contents</h1>

<table>
  <tr>
    <th>Contenttype</th>
    <th>Title</th>
    <th>Username</th>
    <th>Date created</th>
    <th>Bodytext</th>
    <th>Date of</th>
    <th>Location</th>
    <th>Attachment</th>
    <th>Link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%= content.contenttype %></td>
    <td><%= content.title %></td>
    <td><%= content.username %></td>
    <td><%= content.date_created %></td>
    <td><%= content.bodytext %></td>
    <td><%= content.date_of %></td>
    <td><%= content.location %></td>
    <td><%= content.attachment %></td>
    <td><%= content.link %></td>
    <td><%= link_to 'Show', content %></td>
    <td><%= link_to 'Edit', edit_content_path(content) %></td>
    <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

